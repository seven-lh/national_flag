$img = 'icon.png'
$size = 30px
$margin = 2px
.country-icon
    display inline-block
    overflow hidden
    width $size
    height $size
    background-image url($img)
    background-repeat no-repeat
    margin: 0 $margin
iconBuild(id, col, row)
    .country-{id}
        background-position (0px - (row * $size)) (0px - (col * $size))
